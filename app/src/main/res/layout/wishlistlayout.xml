<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cart_product_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/platic_glass"
        android:paddingLeft="5dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"


        />

    <TextView
        android:id="@+id/tv_main_product_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="Plastic Glass"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:layout_below="@+id/cart_product_image"
        />

    <TextView
        android:id="@+id/tv_sub_product_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/cart_product_image"
        android:gravity="center"
        android:text="$ 3237"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:layout_centerVertical="true"

        />


    <TextView
        android:id="@+id/tv_in_stock_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/tv_sub_product_information"
        android:gravity="center"
        android:text="in Stock"
        android:textColor="@color/Primary"
        android:textSize="@dimen/_16sdp"
        android:layout_centerVertical="true"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/tv_in_stock_status"
        android:gravity="center"
        android:text="Add to Cart"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:background="@drawable/button_bg_curve"
        android:backgroundTint="@color/Secondary_less"

        />


    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="top"
        android:src="@drawable/delete_lines"
        android:layout_toRightOf="@+id/btn_add_to_cart"
        android:paddingLeft="10dp"

        />



    <TextView
        android:id="@+id/tv_added_on_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_below="@+id/btn_add_to_cart"

        android:gravity="center"
        android:text="Added on April 1 2023"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:layout_centerVertical="true"

        />






</RelativeLayout>