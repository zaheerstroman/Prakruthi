<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/profile_backgound"
    tools:context=".ui.ui.profile.ProfileFragment"

    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/card_back_btn"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/baseline_arrow_back_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_back_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:gravity="center"
        android:text="ID : #2256291"
        android:textSize="@dimen/_30sdp" />

<!--    <androidx.core.widget.NestedScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:orientation="vertical"-->
<!--        android:layout_below="@+id/txt_id">-->

        <LinearLayout
            android:id="@+id/layout_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_below="@+id/txt_id"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/custom_edit_text"
            android:backgroundTint="#C6E4FF"
            android:gravity="center"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_my_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_my_orders_Image"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableTop="@drawable/myorder_vector"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="My Orders"
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp"
                android:translationY="-4dp" />

            <TextView
                android:id="@+id/tv_my_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_my_orders_Image"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableTop="@drawable/my_address_vector"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="My Address"
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp"

                android:translationY="-4dp" />

            <!--        android:gravity="center_vertical"-->
            <!--        android:layout_gravity="center_vertical"-->
            <TextView
                android:id="@+id/tv_my_wishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_my_orders_Image"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableTop="@drawable/mywishlist_vector"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="My Wishlist"
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp"
                android:translationY="-4dp" />


            <TextView
                android:id="@+id/tv_payments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_my_orders_Image"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableTop="@drawable/mypayment_vector"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="My Payment"
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp"
                android:translationY="-4dp" />


            <!--        OR       -->

            <!--        <ImageView-->
            <!--            android:id="@+id/iv_my_payments"-->
            <!--            android:layout_width="@dimen/_30sdp"-->
            <!--            android:layout_height="@dimen/_30sdp"-->
            <!--            android:layout_centerVertical="true"-->
            <!--            android:layout_marginStart="@dimen/_50sdp"-->
            <!--            android:layout_marginEnd="@dimen/_5sdp"-->
            <!--            android:layout_toEndOf="@id/iv_my_wishlist"-->
            <!--            android:backgroundTint="#6144AE53"-->
            <!--            android:src="@drawable/payments_vector" />-->

            <!--        <TextView-->
            <!--            android:id="@+id/tv_payments"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_centerVertical="true"-->
            <!--            android:layout_marginStart="@dimen/_5sdp"-->
            <!--            android:layout_toEndOf="@id/tv_my_wishlist"-->
            <!--            android:layout_below="@id/iv_my_payments"-->
            <!--            android:text="My Payments"-->
            <!--            android:textSize="@dimen/_10sdp" />-->

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_all"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center"
            android:text="Services"
            android:textSize="@dimen/_30sdp"


            />

        <LinearLayout
            android:id="@+id/layout_all_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_below="@+id/tv_service"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/custom_edit_text"
            android:backgroundTint="#C6E4FF"
            android:gravity="center"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_my_orders_Image"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableTop="@drawable/myorder_vector"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="Feedback"
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp"
                android:translationY="-4dp" />

            <TextView
                android:id="@+id/tv_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feedback"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableTop="@drawable/my_address_vector"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="Support"
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp"

                android:translationY="-4dp" />

            <!--        android:gravity="center_vertical"-->
            <!--        android:layout_gravity="center_vertical"-->
            <TextView
                android:id="@+id/tv_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_support"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableTop="@drawable/mywishlist_vector"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="Privacy Policy"
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp"
                android:translationY="-4dp" />


            <TextView
                android:id="@+id/tv_About_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_privacy_policy"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableTop="@drawable/mypayment_vector"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="About Us"
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp"
                android:translationY="-4dp" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_recent_Products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_all_2"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center"
            android:paddingTop="@dimen/_10sdp"
            android:text="Recent Products"
            android:textColor="@color/Primary"
            android:textSize="@dimen/_20sdp"


            />

        <!--    android:layout_toRightOf="@+id/tv_recent_Products"-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_all_2"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:foregroundGravity="right"
            android:gravity="center"
            android:paddingTop="@dimen/_10sdp"
            android:text="View All"
            android:textColor="@color/Green"
            android:textSize="@dimen/_20sdp" />


        <com.cooltechworks.views.shimmer.ShimmerRecyclerView
            android:id="@+id/ProfileHomeProductsRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_view_all"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:shimmer_demo_child_count="10"
            app:shimmer_demo_layout="@layout/homepage_product_recycle_view_loading"
            app:shimmer_demo_layout_manager_type="grid"
            app:spanCount="2"
            tools:itemCount="10"
            tools:listitem="@layout/homepage_product_recycle_view" />



<!--    </androidx.core.widget.NestedScrollView>-->


</RelativeLayout>




